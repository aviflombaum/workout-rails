<div id="exercise_fields">
  <h3>Exercise:</h3><br>
  <div class="row">
      <%= f.label :name, class: "col-lg-2 col-md-2 col-sm-2 col-xs-4" %>
      <%= f.text_field :name, class: "col-lg-4 col-md-5 col-sm-5 col-xs-5" %>
      <%= f.hidden_field :_destroy %>
      <%= link_to "", "#", class: "remove_exercise_fields col-lg-2 col-md-3 col-sm-5 col-xs-2 glyphicon glyphicon-remove" %>
  </div>
  <br>
  <%= f.fields_for :numsets do |set| %>
    <%= render "numset_fields", f: set %>
  <% end %>
  <br>
  <%= link_to_add_fields "Add Set", f, :numsets %><br><br>

  <%= f.fields_for :reps do |rep| %>
    <%= render "rep_fields", f: rep %>
  <% end %>

  <%= link_to_add_fields "Add Rep", f, :reps %><br><br>

</div>
