<%= form_for @workout do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :title, @workout.category_id) %>

  <%= f.fields_for :exercises do |exercise| %>
    <%= render "exercise_fields", f: exercise %>
  <% end %>

  <br><br>

  <%= link_to_add_fields "Add Exercise", f, :exercises %><br><br>

  <%= f.submit %>

<% end %>
